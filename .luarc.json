{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT",
    "path": [
      "lua/?.lua",
      "lua/?/init.lua"
    ]
  },
  "diagnostics": {
    "globals": [
      "vim",
      "bit"
    ]
  },
  "workspace": {
    "library": [
      "${3rd}/luv/library",
      "$VIMRUNTIME/lua"
    ],
    "checkThirdParty": false
  }
}
